{
  "name": "reactify-boilerplate",
  "version": "0.1.2",
  "description": "A quickstart boilerplate using React & Restify",
  "main": "server.js",
  "homepage": "https://github.com/mathiscode/reactify-boilerplate#readme",
  "repository": "https://github.com/mathiscode/reactify-boilerplate.git",
  "bugs": "https://github.com/mathiscode/reactify-boilerplate/issues",
  "license": "MIT",

  "author": {
    "name": "J.R. Mathis",
    "url": "https://github.com/mathiscode"
  },

  "scripts": {
    "start": "node server.js",
    "server-dev": "nodemon server.js",
    "client-dev": "npm start --prefix client",
    "build": "npm run build --prefix client",
    "dev": "concurrently \"npm run server-dev\" \"npm run client-dev\"",
    "lint": "standard -v",
    "test-server": "mocha --exit",
    "test-client": "npm test --prefix client",
    "test": "npm run lint && npm run test-server && npm run test-client",
    "coverage": "istanbul cover node_modules/mocha/bin/_mocha -- --exit test/ -x *.test.js",
    "sync-demo": "git checkout demo && git merge master && git push && git checkout master",
    "postinstall": "cd client && yarn"
  },

  "nodemonConfig": {
    "ignore": [
      "*.log",
      "client/*"
    ]
  },
  
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "/client/build",
      "/public"
    ]
  },

  "dependencies": {
    "bcryptjs": "^2.4.3",
    "dotenv": "^6.1.0",
    "helmet": "^3.15.0",
    "i18n": "^0.8.3",
    "jsonwebtoken": "^8.3.0",
    "mongoose": "^5.3.11",
    "mongoose-timestamp": "^0.6.0",
    "restify": "^7.2.2",
    "restify-errors": "^6.1.1",
    "restify-jwt-community": "^1.0.8",
    "serve-static-restify": "^3.0.0",
    "validator": "^10.9.0",
    "winston": "^3.1.0"
  },

  "devDependencies": {
    "babel-eslint": "9.0.0",
    "chai": "^4.2.0",
    "concurrently": "^4.0.1",
    "eslint": "5.6.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "istanbul": "^1.0.0-alpha.2",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.6",
    "standard": "^12.0.1",
    "supertest": "^3.3.0"
  }
}
